<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValleyAuthenticator.Views.AddEntryFromSecretPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add entry"
                HorizontalOptions="CenterAndExpand" />

            <Editor x:Name="nameEditor" Placeholder="Name" />
            <Editor x:Name="secretEditor" Placeholder="TOTP secret" />

            <Button 
                Text="Add"
                FontAttributes="Bold"
                Clicked="OnAddClicked"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>