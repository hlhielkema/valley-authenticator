<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValleyAuthenticator.Views.AddDirectoryPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="16" Spacing="8">
            <Label Text="Create directory"
                       HorizontalOptions="Start"
                   FontAttributes="Bold"/>

            <Editor x:Name="nameEditor" Placeholder="Name" />

            <Button Margin="0,10,0,0" Text="Create"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Clicked="OnAddClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>