<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValleyAuthenticator.Views.AddDirectoryPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" Padding="16" Spacing="8">
                <Label Text="Add directory"
                       HorizontalOptions="Start" />

                <Editor x:Name="nameEditor" Placeholder="Name" />
                
                <Button Margin="0,10,0,0" Text="Start"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Clicked="OnAddClicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>