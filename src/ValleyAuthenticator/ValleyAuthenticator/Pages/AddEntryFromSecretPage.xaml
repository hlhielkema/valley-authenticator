<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValleyAuthenticator.Pages.AddEntryFromSecretPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add entry"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Editor x:Name="nameEditor" Placeholder="Name" />
            <Editor x:Name="secretEditor" Placeholder="TOTP secret" />

            <Button 
                Text="Add"
                FontAttributes="Bold"
                SemanticProperties.Hint="Adds the entry"
                Clicked="OnAddClicked"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>