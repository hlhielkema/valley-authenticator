<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValleyAuthenticator.Views.TextDataPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="CopyButton" Order="Primary" Clicked="OnClickedCopy">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                FontFamily="FontAwesome"
                Glyph="&#xf24d;"
                Size="18" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="PasteButton" Order="Primary" Clicked="OnClickedPaste">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                FontFamily="FontAwesome"
                Glyph="&#xf0ea;"
                Size="18" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="AcceptButton" Order="Primary" Clicked="OnClickedAccept">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                FontFamily="FontAwesome"
                Glyph="&#xf00c;"
                Size="18" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <Editor x:Name="dataEditor" VerticalOptions="Fill"  HorizontalOptions="Fill" />
        </ScrollView>
    </ContentPage.Content>
</ContentPage>